name: CI - dev-utils

on:
  push:
    branches:
      - '**'
      - '!dependabot/**'
  pull_request: {}

jobs:
  publish:
    if: |
      github.event_name == 'push' && startsWith(github.repository, 'projectriff/') && (
        github.ref == 'refs/heads/master' || (
          startsWith(github.ref, 'refs/heads/v') && endsWith(github.ref, 'x')
        )
      )
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-go@v1
        with:
          go-version: '1.13'
      - name: docker login
        run: echo $DOCKER_PASSWORD | docker login --username $DOCKER_USERNAME --password-stdin
        working-directory: dev-utils
        shell: bash
        env:
          DOCKER_USERNAME: ${{ secrets.DOCKER_USERNAME }}
          DOCKER_PASSWORD: ${{ secrets.DOCKER_PASSWORD }}
      - name: build publish
        run: |
          GOOS=linux GOARCH=amd64 go build -o bin/publish ./cmd/publish
        working-directory: dev-utils
        shell: bash
      - name: build subscribe
        run: |
          GOOS=linux GOARCH=amd64 go build -o bin/subscribe ./cmd/subscribe
        working-directory: dev-utils
        shell: bash
      - name: docker build
        run: |
          docker build . -t projectriff/dev-utils
        working-directory: dev-utils
        shell: bash
      - name: Publish to Registry
        run: ../.github/workflows/ci-dev-utils/push-to-dockerhub.sh ${{ github.ref }}
        working-directory: dev-utils
        shell: bash
